<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_layout_lms_LL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:background="#164F92"
    android:weightSum="4">
    <!--Home-->
    <LinearLayout
        android:id="@+id/ll_lms_performance"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical"
        android:focusable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_lms_performance"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/my_performance_"
            android:clickable="false"
            android:contentDescription="@null"
            android:focusable="false" />

        <com.trackerbreeze.widgets.AppCustomTextView
            android:id="@+id/tv_lms_performance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_IV"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="Performance"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>

    <!--Add Shop-->
    <LinearLayout
        android:id="@+id/ll_lms_mylearning"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_lms_mylearning"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ftr_my_learning"
            android:clickable="false"
            android:contentDescription="@null"
            android:focusable="false" />

        <com.trackerbreeze.widgets.AppCustomTextView
            android:id="@+id/tv_lms_mylearning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_shop_IV"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="My Learning"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <!--Near Shops-->

    <LinearLayout
        android:id="@+id/ll_lms_leaderboard"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical"
        android:focusable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_lms_leaderboard"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ftr_leaderboard"
            android:clickable="false"
            android:contentDescription="@null"
            android:focusable="false"

            />

        <com.trackerbreeze.widgets.AppCustomTextView
            android:id="@+id/tv_lms_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nearby_shops_IV"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="Leaderboard"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>
    <!--My Orders-->

    <LinearLayout
        android:id="@+id/ll_lms_knowledgehub"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_lms_knowledgehub"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ftr_knowledge_hub"
            android:clickable="false"
            android:contentDescription="@null"
            android:focusable="false" />

        <com.trackerbreeze.widgets.AppCustomTextView
            android:id="@+id/tv_lms_knowledgehub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_orders_IV"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="Knowledge Hub"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

</LinearLayout>

